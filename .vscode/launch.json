{
        "configurations": [
        {
                "name": ".NET Core Launch (web)",
                "type": "coreclr",
                "request": "launch",
                "preLaunchTask": "build",
                "program": "${workspaceFolder}/EarlyManApp/bin/Debug/net7.0/EarlyManApp.dll",
                "args": [],
                "cwd": "${workspaceFolder}",
                "stopAtEntry": false,
                "serverReadyAction": {
                        "action": "openExternally",
                        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
                },
                "env": {
                        "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "sourceFileMap": {
                        "/Views": "${workspaceFolder}/Views"
                }
        }
        ]
}