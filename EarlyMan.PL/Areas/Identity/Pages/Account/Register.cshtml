@page
@model RegisterModel;
@{
    Layout = "../Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Create Account | Earlyman";
}

    <header>
        <div class="row limited clear-fix">
            <h3 class="column small-12">Create a new account</h3>
        </div>
    </header>
    <nav></nav>
    <main class="clear-fix">
        <div class="formbody">
            <form class="row limited clear-fix" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="column"></div>
                <div class="column small-12">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="column small-12">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="column small-12">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="column small-12">
                    <label asp-for="Input.PhoneNo"></label>
                    <input asp-for="Input.PhoneNo" class="form-control" />
                    <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
                </div>
                <div class="column small-12">
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
            </form>
        </div>
   
    </main>

